!!! 5
%html
  %head
    %title foodlog
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', { :media => 'all', :data => {:turbolinks => {:track => 'reload'}} }
    = javascript_pack_tag 'application', { :data => {:turbolinks => {:track => 'reload'}}}

  %body

    = render 'shared/header'

    - if notice.present?
      .notification.is-link.is-light.global-notification
        .delete
        .notice= notice
    - if alert.present?
      .notification.is-danger.is-light.global-notification
        .delete
        .alert= alert

    %section.section
      .container
        = yield
